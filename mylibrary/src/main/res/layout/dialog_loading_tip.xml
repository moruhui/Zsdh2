<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_tip_logo"
        android:layout_width="160px"
        android:layout_height="160px"
        android:scaleType="fitXY"
        android:src="@drawable/no_content_tip"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="100px"
        android:layout_height="100px"
        android:indeterminateDrawable="@drawable/loading_dialog_progressbar"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="28px"
        android:text="加载中..."
        android:textColor="#000"
        android:textSize="28px"/>

    <TextView
        android:id="@+id/bt_operate"
        android:layout_width="170px"
        android:layout_height="70px"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_gray"
        android:gravity="center"
        android:text="@string/reload"
        android:textColor="#fff"
        android:textSize="28px"
        android:visibility="visible"/>
</com.zhy.autolayout.AutoLinearLayout>